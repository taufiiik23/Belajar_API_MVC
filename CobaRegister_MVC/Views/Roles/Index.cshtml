<hr />
<button class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="ClearScreen();" >Create New</button>
<hr />
<table id="table" class="table table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
</table>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Role Form</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Id">Id</label>
                    <input type="text" id="roleIdText" class="form-control" placeholder="Id" />
                </div>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" id="roleNameText" class="form-control" placeholder="Name">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="Validation();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" onclick="Validation();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

    <script>
        $(document).ready(function () {
            debugger;
            $("#table").DataTable({
                "ajax": {
                    "url": "/Roles/GetDataRoles",
                    "type": "GET",
                    "dataType": "json"
                },
                "columns": [
                    { "data": "Name" },
                    {
                        "render": function (data, type, row, meta) {
                            return "<a onClick=GetById('" + row.Id + "');>Edit</a>";
                        }
                    },
                    {
                        "render": function (data, type, row) {
                            return "<a onclick=Delete('" + row.Id + "');>Delete</a>";
                        }
                    },
                ]
            })
        })

        function Delete(Id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        "url": "/Roles/Delete/",
                        "dataType": "json",
                        "data": { id: Id }
                    }).then((hasil) => {
                        if (result.data > 0) {
                            Swal.fire(
                                'Success!',
                                'Data has been deleted!.',
                                'success'
                            )
                        }
                        else {
                            Swal.fire(
                                'Failed!',
                                'Data not deleted!.',
                                'failled'
                            )
                        }
                    })
                }
            })
        }

        function Edit(Id) {
            debugger;
            var role = new Object();
            role.Id = $("#roleIdText").val();
            role.Name = $("#roleNameText").val();
            $.ajax({
                "url": "/Roles/Edit/",
                "type": "GET",
                "dataType": "json",
                "data": role
            }).then((result) => {
                if (result.data > 0) {
                    Swal.fire(
                        'Success!',
                        'Your file has been update.',
                        'success'
                        )
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Your file not updated.',
                        'FAILED'
                        )
                }
            })
        }

        function GetById(Id) {
            $.ajax({
                "url": "/Roles/Details/",
                "type": "GET",
                "dataType": "json",
                "data": { Id: Id }
            }).then((result) => {
                if (result.data[0] != null) {
                    document.getElementById("roleIdText").disabled = true;
                    $("#roleIdText").val(result.data[0].Id);
                    $("#roleNameText").val(result.data[0].Name);

                    $("#myModal").modal('show');
                    $("#Update").show();
                    $("#Save").hide();
                }
            })
        }

        function Save() {
            var role = new Object();
            role.Name = $("#roleNameText").val();
            $.ajax({
                "url": "/Roles/Create",
                "type": "POST",
                "dataType": "json",
                "data": role
            }).then((result) => {
                if (result.data > 0) {
                    Swal.fire(
                        'Success!',
                        'Your file has been inserted.',
                        'success'
                    )
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Your file not inserted.',
                        'FAILED'
                    )
                }
            })
        }

        function ClearScreen() {
            document.getElementById("roleIdText").disabled = true;
            $("#roleNameText").val('');
            $("#Update").hide();
            $("#Save").show();
        }

        function Validation() {
            debugger;
            if ($("#roleNameText").val() == "" || $("#roleNameText").val() == "") {
                Swal.fire('Silahkan isikan Nama terlebih dahulu');
            }
            else if ($("#roleIdText").val() == "" || $("#roleIdText").val() == "") {
                Save();
            }
            else {
                Edit($("#roleIdtext").val());
            }
        }
    </script>
}